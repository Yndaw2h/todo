{
  "name": "todo",
  "version": "1.0.0",
  "description": "todo app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cli": "node movie_search.js",
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "cli",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.todo.app",
    "productName": "Todo app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    }
  }
}

